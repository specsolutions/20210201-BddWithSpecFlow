@model SpecFlowTraining.GeekPizza.Web.DataAccess.User

@{
	ViewBag.Title = "Login";
}

<h2 class="message">Login</h2>
<p>This dummy login page is for demo purposes only! Don't copy!</p>
<p>Use Marvin/1234 as credentials.</p>

@using (Html.BeginForm())
{
	<div class="form-horizontal">
		<hr />
		@if (ViewBag.ErrorMessage != null)
		{
			<div class="error">@ViewBag.ErrorMessage</div>
		}

		<div class="form-group">
			@Html.LabelFor(model => model.Name, new { @class = "control-label" })
			<div class="control-input">
				@Html.EditorFor(model => model.Name)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Password, new { @class = "control-label" })
			<div class="control-input">
				@Html.EditorFor(model => model.Password)
			</div>
		</div>

		<div class="form-group">
			<input type="submit" value="Login" id="LoginButton" class="btn btn-default" />
		</div>
	</div>
}
